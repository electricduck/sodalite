[Desktop Entry]
Name=Sodalite on Telegram
Comment=Browse and manage apps
Exec=xdg-open https://t.me/sodalitechat
Icon=distributor-logo
Keywords=sodalite;chat;telegram
Actions=HideApp;
Terminal=false
Type=Application
StartupNotify=true
Categories=Other;

[Desktop Action HideApp]
Name=Hide Entry
Exec=rocks.sodalite.hide-app --desktop-file rocks.sodalite.links.telegram-chat --confirm-before-hiding

